{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format

    "version": "2.0.0",

    "tasks": [
        {
            "label": "Configure",
            "type":"shell",
            "group": "none",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "command": "cmake",
            "windows": {
                "args": [
                    "-G",
                    "Visual Studio 17 2022",
                    "-S",
                    ".",
                    "-B",
                    "build"
                ],
            },
            "osx": {
                "args": [
                    "-G",
                    "Xcode",
                    "-S",
                    ".",
                    "-B",
                    "build",
                    "'-DCMAKE_OSX_ARCHITECTURES=arm64;x86_64'"
                ],
            },
            "problemMatcher": []
        },
        {
            "label": "Launch: Xcode",
            "type": "process",
            "group": "none",
            "presentation": {
                "echo": false,
                "reveal": "never",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            },
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "command": "",
            "osx": {
                "command": "xed",
            },
            "args": [
                "./build/EQ.xcodeproj",
            ],
            "problemMatcher": []
        },
        {
            "label": "Launch: VS 2022",
            "type": "process",
            "group": "none",
            "presentation": {
                "echo": false,
                "reveal": "never",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            },
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "command": "",
            "windows": {
                "command": "C:/Program Files/Microsoft Visual Studio/2022/Community/Common7/IDE/devenv.exe",
            },
            "args": [
                "./build/EQ.sln",
            ],
            "problemMatcher": []
        },
        {
            "label": "Build: EQ",
            "type":"shell",
            "group": "none",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "command": "cmake",
            "windows": {
                "args": [
                    "--build",
                    ".",
                    "-j",
                    "12"
                ],
                "problemMatcher": "$msCompile"
            },
            "osx": {
                "args": [
                    "-G",
                    "Xcode",
                    "-B",
                    "build",
                    "'-DCMAKE_OSX_ARCHITECTURES=arm64;x86_64'"
                ],
                "problemMatcher": {
                    "owner": "cpp",
                    "pattern": {
                        "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                        "file": 1,
                        "line": 2,
                        "column": 3,
                        "severity": 4,
                        "message": 5
                    }
                }
            },

            "options": {
                "cwd": "${workspaceRoot}/build"
            },
        }
    ]
}