    "version": "0.2.0",

    "configurations": [
        {
            "name": "Launch Standalone Plugin (debug)",
            "type": "cppdbg",
            "program": "${workspaceRoot}/build/Source/EQ_artefacts/Debug/Standalone/EQ.exe",

            "request": "launch",
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],

            "osx": {
                "MIMode": "lldb",
                "externalConsole": false,
                "program": "${workspaceRoot}/build/Source/EQ_artefacts/Debug/Standalone/EQ.app/Contents/MacOS/EQ",
            },

            "windows": {
                "type": "cppvsdbg",
                "console": "internalConsole",
                "internalConsoleOptions": "openOnSessionStart",
                "program": "${workspaceRoot}/build/Source/EQ_artefacts/Debug/Standalone/EQ.exe"
            }
        }
    ]
}